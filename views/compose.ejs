<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose Email</title>
    <link rel="stylesheet" href="./stylesheets/composeStyle.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome, <%= fullName %></h1>
            <a href="/signout">Sign out</a>
        </header>

        <% if (error) { %>
            <p class="error-message"><%= error %></p>
        <% } %>

        <nav>
            <ul>
                <li class="active"><a href="/compose">Compose</a></li>
                <li><a href="/inbox">Inbox</a></li>
                <li><a href="/outbox">Outbox</a></li>
            </ul>
        </nav>

        <main>
            <h2>Compose</h2>
            <form action="/compose" method="post" enctype="multipart/form-data">
                <label for="recipient">Recipient:</label>
                <select id="recipient" name="recipient">
                  <option value="">Select a recipient</option>
                  <% users.forEach(user => { %>
                    <option value="<%= user.email %>"><%= user.fullName %></option>
                  <% }) %>
                </select>

                <label for="subject">Subject:</label>
                <input type="text" id="subject" name="subject">

                <label for="body">Body:</label>
                <textarea id="body" name="body"></textarea>

                <label for="attachment">Attachment:</label>
                <input type="file" id="attachment" name="attachment">

                <input type="submit" value="Send">
            </form>
        </main>
    </div>
</body>
</html>
