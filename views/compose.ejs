<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Compose Email</title>
    <link rel="stylesheet" href="./stylesheets/composeStyle.css" />
  </head>
  <body>
    <div class="main-container">
      <aside class="sidebar">
        <h2>MAIL HUB</h2>
        <ul>
          <li class="active"><a href="/compose">Compose</a></li>
          <li><a href="/inbox">Inbox</a></li>
          <li><a href="/outbox">Outbox</a></li>
        </ul>
      </aside>
      <div class="content">
        <header class="header">
          <h1>Welcome, <%= fullName %></h1>
          <a href="/signout">Sign out</a>
        </header>
        <% if (error) { %>
        <p class="error-message"><%= error %></p>
        <% } %>
        <main>
          <h2>Compose</h2>
          <form
            action="/compose"
            method="post"
            enctype="multipart/form-data"
            class="compose-form"
          >
            <div class="form-group">
              <label for="recipient">Recipient:</label>
              <select id="recipient" name="recipient" required>
                <option value="" disabled selected>Select a recipient</option>
                <% users.forEach(user => { %>
                <option value="<%= user.email %>"><%= user.fullName %></option>
                <% }) %>
              </select>
            </div>
            <div class="form-group">
              <label for="subject">Subject:</label>
              <input type="text" id="subject" name="subject" />
            </div>
            <div class="form-group">
              <label for="body">Body:</label>
              <textarea id="body" name="body" required></textarea>
            </div>
            <div class="form-group">
              <label for="attachment">Attachment:</label>
              <input type="file" id="attachment" name="attachment" />
            </div>
            <button type="submit" class="send-button">Send</button>
          </form>
        </main>
      </div>
    </div>
  </body>
</html>
